# AccrediFy Environment Variables
# Copy this file to .env and fill in your values

# Database
DB_PASSWORD=your-secure-database-password

# Django
DJANGO_SECRET_KEY=your-very-long-and-random-secret-key-here
DEBUG=False

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Keystone Deployment Configuration
# When deploying via Keystone with path-based routing (e.g., http://VPS_IP/accred-ai/)
# Set these variables:

# The subpath where the app is mounted (e.g., /accred-ai)
# Leave empty for root deployment
FORCE_SCRIPT_NAME=

# Frontend base path for Vite (should match FORCE_SCRIPT_NAME without trailing slash)
VITE_BASE_PATH=

# Allowed hosts (include VPS IP or domain)
# Example: ALLOWED_HOSTS=1.2.3.4,yourdomain.com,localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (include VPS IP with protocol)
# Example: CORS_ALLOWED_ORIGINS=http://1.2.3.4,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# CSRF trusted origins (include VPS IP/domain with protocol)
# Example: CSRF_TRUSTED_ORIGINS=http://1.2.3.4,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Set to True if behind a reverse proxy (like Traefik)
USE_X_FORWARDED_HOST=False

# Set to True if Traefik terminates TLS
USE_HTTPS_PROXY=False

# Additional settings can be added as needed
